<Page x:Class="RentCourseProject.Views.Accountant.AccountantPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RentCourseProject.Views.Accountant"
      mc:Ignorable="d" 
      MinHeight="850" MinWidth="1400"
      MaxHeight="850" MaxWidth="1400"
      Title="AccountantPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Просмотр квитанций" x:Name="ViewReceiptButton" Style="{StaticResource Button}" Click="ViewReceiptButtonClick"/>
            <Button Content="Добавить квитанцию" x:Name="AddReceiptButton" Style="{StaticResource Button}" Margin="0,20,0,0"  Click="AddReceiptButtonClick"/>
        </StackPanel>
    </Grid>
</Page>
