<Page x:Class="RentCourseProject.Views.Resident.ResidentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RentCourseProject.Views.Resident"
      mc:Ignorable="d" 
      MinHeight="850" MinWidth="1400"
      MaxHeight="850" MaxWidth="1400"
      Title="ResidentPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Квитанции" x:Name="ReceiptButton" Style="{StaticResource Button}" Click="ReceiptButtonClick"/>
            <Button Content="История платежей" x:Name="HistoryPaymentButton" Style="{StaticResource Button}" Margin="0,20,0,0" Click="HistoryPaymentButtonClick"/>
        </StackPanel>
    </Grid>
</Page>
